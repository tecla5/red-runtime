{
  "name": "red-runtime",
  "version": "1.0.0",
  "description": "NodeRed API",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test:ava": "nyc ava",
    "test": "mocha",
    "test:coverage": "mocha --reporter mocha-istanbul --require expect --reportFormats lcov --print both",
    "build:prod": "webpack --progress --colors --env=prod",
    "build:dev": "webpack --progress --colors --env=dev",
    "lerna:update": "npm run lerna:clean && npm run lerna:bootstrap",
    "lerna:bootstrap": "lerna bootstrap --scope red-runtime",
    "lerna:clean": "rm -f package.json.lock 2> /dev/null && echo y | lerna clean --scope red-runtime"
  },
  "keywords": [
    "nodered",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tecla5/red-runtime.git"
  },
  "author": "Kristian Mandrup",
  "license": "ISC",
  "dependencies": {
    "red-api": "github:tecla5/red-api",
    "basic-auth": "1.1.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.17.2",
    "cheerio": "0.22.0",
    "clone": "2.1.1",
    "cookie": "0.3.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.3",
    "cron": "1.2.1",
    "follow-redirects": "1.2.4",
    "fs-extra": "1.0.0",
    "fs.notify": "0.0.4",
    "hash-sum": "1.0.2",
    "i18next": "1.10.6",
    "is-utf8": "0.2.1",
    "js-yaml": "3.8.4",
    "json-stringify-safe": "5.0.1",
    "jsonata": "1.3.0",
    "media-typer": "0.3.0",
    "mqtt": "2.9.0",
    "multer": "1.3.0",
    "mustache": "2.3.0",
    "nopt": "3.0.6",
    "oauth2orize": "1.8.0",
    "on-headers": "1.0.1",
    "passport": "0.3.2",
    "passport-http-bearer": "1.0.1",
    "passport-oauth2-client-password": "0.1.2",
    "semver": "5.3.0",
    "sentiment": "2.1.0",
    "when": "3.7.8",
    "ws": "1.1.1",
    "xml2js": "0.4.17"
  },
  "optionalDependencies": {
    "bcrypt": "~1.0.1"
  },
  "devDependencies": {
    "istanbul": "0.4.5",
    "mocha": "~3.4.2",
    "should": "^8.4.0",
    "sinon": "1.17.7",
    "supertest": "3.0.0",
    "when": "^3.7.8",
    "express": "^4.15.5",
    "ws": "^3.2.0",
    "ava": "^0.22.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-compact-reexports": "^0.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.1",
    "babili-webpack-plugin": "0.0.11",
    "mock-local-storage": "^1.0.2",
    "nightmare": "^2.10.0",
    "nyc": "^11.0.2",
    "webpack": "^3.5.6",
    "webpack-merge": "^4.1.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "concurrency": 1,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
